{
    "version": "1.0.1",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "lint": "tsdx lint",
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "semantic-release": "semantic-release"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "trailingComma": "es5"
    },
    "name": "react-honey-hooks",
    "author": "Abdelfatah Ashour",
    "module": "dist/react-honey-hooks.esm.js",
    "description": "A React Hooks version of the Honey Hooks library",
    "size-limit": [
        {
            "path": "dist/react-honey-hooks.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/react-honey-hooks.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "husky": "^8.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "size-limit": "^7.0.8",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.0",
        "typescript": "^3.9.10",
        "semantic-release": "^19.0.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/abdelfatahashour4/react-honey-hooks.git"
    }
}
